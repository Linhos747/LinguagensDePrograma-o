# Dicion√°rio para armazenar os alunos
alunos = {}

# Cadastro de 3 alunos
for i in range(3):
    nome = input(f"Digite o nome do aluno {i + 1}: ")
    nota = float(input(f"Digite a nota do aluno {i + 1}: "))
    alunos[nome] = nota

# Exibe a lista de alunos e suas notas
print("\nLista de Alunos e Notas:")
for nome, nota in alunos.items():
    print(f"{nome}: {nota}")
